<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="logback.logdir" value="./log" />
	<property name="logback.appname" value="pay" />
	<appender name="consoleLog"
		class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>info</level>
		</filter>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>
				<pattern>%d{HH:mm:ss.SSS}-[%thread] %-5level %logger.%M - %msg%n
				</pattern>
			</pattern>
		</layout>
	</appender>

	<appender name="fileLog"
		class="com.qiyi.tvguo.pay.common.logging.logger.appender.TagAwareRollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>info</level>
		</filter>
		<File>${logback.logdir}/${logback.appname}.log</File>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${logback.logdir}/${logback.appname}.%d{yyyy-MM-dd}.log
			</FileNamePattern>
			<maxHistory>90</maxHistory>
			<!--<totalSizeCap>1GB</totalSizeCap> -->
		</rollingPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%d [%thread] %-5level %logger.%M %line - %msg%n
			</pattern>
		</encoder>
	</appender>
	<root level="debug">
		<appender-ref ref="consoleLog" />
		<appender-ref ref="fileLog" />
	</root>
</configuration>